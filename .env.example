# SMTP Configuration for Superset
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_user
SMTP_PASSWORD=your_password
MAIL_DEFAULT_RECIPIENT=admin@example.com

# Security
# Run `openssl rand -base64 42` to generate a key
SECRET_KEY=change_this_to_a_secure_random_string

# Postgres
POSTGRES_USER=superset
POSTGRES_PASSWORD=superset
POSTGRES_DB=superset

# Domain for Nginx/Grafana (optional usage)
DOMAIN=localhost

# Superset Config
ROW_LIMIT=5000000
SUPERSET_WEBSERVER_PORT=8088

# OIDC (Keycloak)
OIDC_CLIENT_ID=superset
OIDC_OPENID_REALM=superset
OIDC_ISSUER_URL=http://host.docker.internal:8001/realms/superset

# Reporting
ALERT_REPORTS_WORKER_USERNAME=admin
WEBDRIVER_BASEURL=http://superset:8088

# Network / Mirrors (For restricted environments)
# Use a mirror if pypi.org is blocked (e.g., https://pypi.tuna.tsinghua.edu.cn/simple)
PYPI_MIRROR=https://pypi.tuna.tsinghua.edu.cn/simple
